<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="twin">
    <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
    </material>
    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>
    <material name="green">
        <color rgba="0 1 0 1"/>
    </material>
    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>
    <material name="yellow">
        <color rgba="1 1 0 1"/>
    </material>
    <material name="cyan">
        <color rgba="0 1 1 1"/>
    </material>
    <material name="magenta">
        <color rgba="1 0 1 1"/>
    </material>

    <link name="world"> </link>
    <joint name="world_to_table" type="fixed">
        <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        <parent link="world"/>
        <child link="table"/>
    </joint>

    <link name="table">
        <visual>
            <origin xyz="1 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="5 0.1 3"/>
            </geometry>
            <material name="gray"/>
        </visual>
        <collision>
            <origin xyz="1 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="5 0.1 3"/>
            </geometry>
        </collision>
    </link>
    <joint name="table_to_firstFloor" type="prismatic">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <parent link="table"/>
        <child link="firstFloor"/>
        <axis xyz="1 0 0"/> <!-- Allows horizontal motion along the x-axis -->
        <limit lower="-1.0" upper="1.0" effort="1000" velocity="1.0"/>
    </joint>

    <link name="firstFloor">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="1 2 1"/>
            </geometry>
            <material name="magenta"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="1 2 1"/>
            </geometry>
        </collision>
    </link>
    <joint name="firstFloor_to_secondFloor" type="prismatic">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <parent link="firstFloor"/>
        <child link="secondFloor"/>
        <axis xyz="1 0 0"/> <!-- Allows horizontal motion along the x-axis -->
        <limit lower="-1.0" upper="1.0" effort="1000" velocity="1.0"/>
    </joint>

    <link name="secondFloor">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="1 2 1"/>
            </geometry>
            <material name="magenta"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="1 2 1"/>
            </geometry>
        </collision>
    </link>
    <joint name="secondFloor_to_thirdFloor" type="prismatic">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <parent link="secondFloor"/>
        <child link="thirdFloor"/>
        <axis xyz="1 0 0"/> <!-- Allows horizontal motion along the x-axis -->
        <limit lower="-1.0" upper="1.0" effort="1000" velocity="1.0"/>
    </joint>

    <link name="thirdFloor">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="1 2 1"/>
            </geometry>
            <material name="magenta"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="1 2 1"/>
            </geometry>
        </collision>
    </link>
    <joint name="thirdFloor_to_fourthFloor" type="prismatic">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <parent link="thirdFloor"/>
        <child link="fourthFloor"/>
        <axis xyz="1 0 0"/> <!-- Allows horizontal motion along the x-axis -->
        <limit lower="-1.0" upper="1.0" effort="1000" velocity="1.0"/>
    </joint>

    <link name="fourthFloor">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="1 2 1"/>
            </geometry>
            <material name="magenta"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="1 2 1"/>
            </geometry>
        </collision>
    </link>
    <joint name="fourthFloor_to_fifthFloor" type="prismatic">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <parent link="fourthFloor"/>
        <child link="fifthFloor"/>
        <axis xyz="1 0 0"/> <!-- Allows horizontal motion along the x-axis -->
        <limit lower="-1.0" upper="1.0" effort="1000" velocity="1.0"/>
    </joint>

    <link name="fifthFloor">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="1 2 1"/>
            </geometry>
            <material name="magenta"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="1 2 1"/>
            </geometry>
        </collision>
    </link>

    <joint name="world_to_camera" type="fixed">
        <parent link="world"/>
        <child link="camera"/>
        <origin xyz="5 6 0" rpy="0 0 0"/>
    </joint>
    <link name="camera">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.1 0.1 0.1"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.1 0.1 0.1"/>
            </geometry>
        </collision>
    </link>
</robot>


